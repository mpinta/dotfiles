# === i3 config file ===

set $mod Mod4

# === basics ===
# font
font pango:Noto Sans 8

# xss-lock startup 
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork

# nm-applet (NetworkManager) startup
exec --no-startup-id nm-applet

# use pactl to adjust volume in PulseAudio
set $refresh_i3status killall -SIGUSR1 i3status

# open terminal
bindsym $mod+Return exec kitty

# === i3 specifics ===
# reload the configuration file
bindsym $mod+Shift+c reload

# restart i3 inplace 
bindsym $mod+Shift+r restart

# exit i3
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# === laptop specifics ===
# volume
bindsym XF86AudioRaiseVolume exec --no-startup-id $HOME/.scripts/volume.sh -u && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id $HOME/.scripts/volume.sh -d && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id $HOME/.scripts/volume.sh -m && $refresh_i3status

# player
bindsym XF86AudioPlay exec --no-startup-id $HOME/.scripts/player.sh -pl
bindsym XF86AudioPause exec --no-startup-id $HOME/.scripts/player.sh -pa
bindsym XF86AudioNext exec --no-startup-id $HOME/.scripts/player.sh -ne
bindsym XF86AudioPrev exec --no-startup-id $HOME/.scripts/player.sh -pr

# brightness
bindsym XF86MonBrightnessUp exec --no-startup-id $HOME/.scripts/brightness.sh -u && $refresh_i3status
bindsym XF86MonBrightnessDown exec --no-startup-id $HOME/.scripts/brightness.sh -d && $refresh_i3status 

# === windows ===
# kill focused window
bindsym $mod+Shift+q kill

# open dmenu
bindsym $mod+d exec --no-startup-id i3-dmenu-desktop

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# resize window
bindsym $mod+r mode "resize"
mode "resize" { 
    bindsym h resize shrink width 10 px or 10 ppt
    bindsym j resize grow height 10 px or 10 ppt
    bindsym k resize shrink height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt
    
    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt
    
    # back to normal
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
}

# fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# use Mouse+$mod to drag floating windows
floating_modifier $mod

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# === workspaces ===
# define names for default workspaces 
set $ws1 "1" 
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# === i3bar ===
bar {
    font pango: Noto Sans, FontAwesome 8
    position bottom
    tray_output none
    status_command /usr/bin/bumblebee-status \
    -m nic date time weather pasink pasource brightness sensors memory battery \
    -p root.path=/ nic.states="up" nic.format="{ssid} {ip}" time.format="%H:%M" weather.showcity="true" sensors.show_freq="false" memory.usedonly="true" \
    -t gruvbox-powerline
}

# === i3gaps ===
for_window [class="^.*"] border pixel 0  
gaps inner 6
gaps outer 6

# === custom bindings ===
# screenshot current screen and save it to pictures
bindsym Print exec --no-startup-id $HOME/.scripts/screenshot.sh -p

# screenshot current screen and save it to clipboard
bindsym $mod+p exec --no-startup-id $HOME/.scripts/screenshot.sh -c

# screenshot gui 
bindsym $mod+Shift+p exec --no-startup-id $HOME/.scripts/screenshot.sh -g

# open ranger
bindsym $mod+Shift+Return exec kitty -e ranger

# lock screen 
bindsym $mod+Escape exec $HOME/.scripts/lock.sh

# floating terminal
bindsym $mod+Shift+f exec --no-startup-id kitty --class=floating_term
for_window [class="floating_term"] floating enable, resize set 800px 500px

# === custom scripts ===
# dunst
exec --no-startup-id dunst

# compton
exec --no-startup-id compton -b -f

# redshift
exec --no-startup-id /usr/lib/geoclue-2.0/demos/agent
exec --no-startup-id redshift-gtk

# screenshot
exec --no-startup-id $HOME/.scripts/screenshot.sh -s

# background
exec --no-startup-id $HOME/.scripts/background.sh

# video
exec --no-startup-id $HOME/.scripts/video.sh -s

